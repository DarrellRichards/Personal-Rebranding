<h1>New Post</h1>
<% if @post.errors.any? %>
	<h2><%= pluralize(@post.errors.count, "error")  %></h2>
	<ul>
		<% @post.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>



<%= form_for :post, url: posts_path do |f| %>
	<%= f.label :title %><br>
	<%= f.text_field :title %><br>
	<%= f.label :body %><br>
	<%= f.text_area :body %><br>
	<%= f.submit %>
<% end %>
